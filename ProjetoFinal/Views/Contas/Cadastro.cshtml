<h2>Cadastrar Conta</h2>
<hr>

<form action="/conta/cadastrar" method="post">
  <label for="agencia">Agência</label><br>
  <input type="text" id="agencia" name="agencia" required="required"><br>

  <label for="tipo">Tipo</label><br>
  <select id="tipo" name="tipo" required="required">
    <option value="0">Conta corrente</option>
    <option value="1">Conta poupança</option>
    <option value="2">Conta investimento</option>
  </select><br>

  <label for="saldo">Saldo</label><br>
  <input type="text" id="saldo" name="saldo" required="required"><br>

  <label for="clienteId">Cliente ID</label><br>
  
  <select id="clienteId" name="clienteId" required="required">
    @foreach (Cliente cliente in ViewBag.Clientes)
    {
      <option value="@cliente.Id">@cliente.Nome</option>
    }
  </select>
  <br><br>

  <input type="submit" class="btn btn-success" value="Enviar">
</form> 
<hr>
<a class="btn btn-secondary" href="/#">Voltar</a>